# Postgres (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=carbon_dev
POSTGRES_PORT=7463

# Prisma / backend
# When running with docker-compose use: postgresql://postgres:postgres@postgres:7463/carbon_dev?schema=public
# For local (host) usage use: postgresql://postgres:postgres@localhost:7463/carbon_dev?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:7463/carbon_dev?schema=public"

# Backend
PORT=3000
NODE_ENV=development

# Frontend
VITE_API_URL="http://localhost:3000"
